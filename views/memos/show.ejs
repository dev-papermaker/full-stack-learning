<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Memo</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
      <div id="map"></div>
    </div>

    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= memo.memo_image %>" alt="image">
        <div class="caption-full">
          <h4><a><%=memo.memo_title %></a></h4>
          <p><%= memo.memo_description %></p>
          <p>Posted by: <a href="/users/<%= memo.author.id %>"><%= memo.author.username %></a>, <%= moment(memo.createdAt).fromNow() %></p>
          <p>Topic: <span class="label label-info"><%= memo.memo_topic %></span></p>
          <hr />
          <div style="padding-bottom: 10px;">
              <form action="/memos/<%= memo._id %>/like" method="POST">
                  <div class="btn-group">
                      <% if (currentUser && memo.likes.some(function (like) {
                          return like.equals(currentUser._id)
                      })) { %>
                          <button class="btn btn-sm btn-primary">
                              <i class="fas fa-thumbs-up"></i> Liked (<%= memo.likes.length %>)
                          </button>
                      <% } else { %>
                          <button class="btn btn-sm btn-secondary">
                              <i class="fas fa-thumbs-up"></i> Like (<%= memo.likes.length %>)
                          </button>
                      <% } %>
                      <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#memoLikes">See more details
                      </button>
                  </div>
              </form>
          </div>
            <% if(currentUser &&
            memo.author.id.equals(currentUser._id)){%>
            <a
              class="btn btn-xs btn-warning"
              href="/memos/<%= memo._id %>/edit"
              >Edit</a
            >
          </p>

          <form
            class="delete-form"
            action="/memos/<%= memo._id %>?_method=DELETE"
            method="POST"
          >
            <input type="submit" class="btn btn-xs btn-danger" value="Delete" />
          </form>
          <% } %>
        </div>
      </div>

      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/memos/<%= memo._id %>/comments/new"
            >Add New Comment</a
          >
        </div>

        <hr />
        <% memo.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
            <p>
              <%= comment.text %>
            </p>
            <% if(currentUser &&
            memo.author.id.equals(currentUser._id)){%>
            <a
              class="btn btn-xs btn-warning"
              href="/memos/<%= memo._id %>/comments/<%= comment._id %>/edit"
              >Edit</a
            >

            <form
              class="delete-form"
              action="/memos/<%= memo._id %>/comments/<%= comment._id %>?_method=DELETE"
              method="POST"
            >
              <input
                type="submit"
                class="btn btn-xs btn-danger"
                value="Delete"
              />
            </form>
            <% };%>
          </div>
        </div>
        <% }) %>
      </div>
      <a href="/memos">Go Back</a>
    </div>
  </div>
</div>

<!-- Memo Likes Modal -->
<div id="memoLikes" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Memo likes: <%= memo.likes.length %></h4>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Liked by:</th>
            </tr>
          </thead>
          <tbody>
            <% memo.likes.forEach(function(like) { %>
            <tr>
              <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
            </tr>
            <% }); %>
            <% if (memo.likes.length === 0) { %>
            <tr>
              <td><em>No likes yet.</em></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  function initMap() {
    var lat = <%= memo.map.lat %>;
    var lng = <%= memo.map.lng %>;
    var center = { lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 8,
      center: center,
      scrollwheel: false
    });
    var contentString = `
      <strong><%= memo.memo_title %><br />
      <%= memo.memo_location %></strong>
      <p><%= memo.memo_descriptio %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
      position: center,
      map: map
    });
    marker.addListener('click', function () {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHScERoqiQVK8K0OqaOBc4qeTcTXY8SWk&callback=initMap"></script>
<% include ../partials/footer %>
